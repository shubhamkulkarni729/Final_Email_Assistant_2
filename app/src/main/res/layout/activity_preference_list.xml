<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activities.PreferenceListActivity">

    <TextView
        android:id="@+id/labelPreferenceList"
        android:layout_width="322dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@color/colorBackgroundGrey"
        android:text="Please select your notification preferences"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkBoxSocial"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/colorBackgroundGrey"
        android:checked="false"
        android:text="Social"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBoxPrimary"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:layout_gravity="center"
        android:background="@color/colorBackgroundGrey"
        android:checked="true"
        android:clickable="false"
        android:text="Primary"
        android:textSize="18sp"
        tools:text="Primary" />

    <CheckBox
        android:id="@+id/checkBoxJobs"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/colorBackgroundGrey"
        android:text="Jobs"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBoxFinancial"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/colorBackgroundGrey"
        android:text="Financial"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBoxOffers"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:layout_gravity="center"
        android:background="@color/colorBackgroundGrey"
        android:text="Offers"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBoxEducational"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:layout_gravity="center"
        android:background="@color/colorBackgroundGrey"
        android:text="Educational"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBoxOrganizational"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:layout_gravity="center"
        android:background="@color/colorBackgroundGrey"
        android:text="Organizational"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSavePreferencesList"
        android:layout_width="186dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:text="Save"
        android:textSize="18sp" />

</LinearLayout>