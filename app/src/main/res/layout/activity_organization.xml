<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.OrganizationActivity">

    <TextView
        android:id="@+id/labelOrganization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/colorBackgroundGrey"
        android:paddingBottom="30dp"
        android:text="Your Organization Name"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/textOrganizationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundGrey"
        android:hint="Organization Name Appearing in the Mail ID"
        android:inputType="textPersonName"
        android:paddingBottom="30dp" />

    <Button
        android:id="@+id/btnSaveOrganization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="SAVE" />
</LinearLayout>